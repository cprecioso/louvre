{
  "name": "louvre",
  "private": true,
  "scripts": {
    "format":
      "yarn run sort-package-json && prettier --write '**/*.{js,json,ts}' '!packages/*/lib'",
    "sort-package-json": "sort-package-json && lerna exec sort-package-json"
  },
  "devDependencies": {
    "lerna": "^2.9.0",
    "prettier": "^1.10.2",
    "pretty-quick": "^1.4.1",
    "sort-package-json": "^1.7.1"
  },
  "workspaces": ["packages/*"]
}
